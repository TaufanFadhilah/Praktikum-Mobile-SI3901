<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.taufanfadhilahiskandar_1202150017_modul1.MainActivity">

    <TextView
        android:id="@+id/t"
        android:layout_width="260dp"
        android:layout_height="43dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="62dp"
        android:layout_marginStart="62dp"
        android:text="Makan Malam"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="150dp"
        android:layout_marginStart="151dp"
        android:layout_marginTop="10dp"
        android:text="Dengan Milea"
        app:layout_constraintBottom_toTopOf="@+id/et_food"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t" />

    <EditText
        android:id="@+id/et_food"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="28dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nasi Uduk"
        app:layout_constraintBottom_toTopOf="@+id/et_portion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/et_portion"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="66dp"
        android:layout_marginEnd="26dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@+id/btn_eatbus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_food" />

    <Button
        android:id="@+id/btn_eatbus"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="163dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="65dp"
        android:background="@color/colorAccent"
        android:onClick="onEatbusClicked"
        android:text="EATBUS"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_portion" />

    <Button
        android:id="@+id/btn_abnormal"
        android:layout_width="131dp"
        android:layout_height="45dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="29dp"
        android:layout_marginTop="96dp"
        android:background="@color/colorAccent"
        android:onClick="onAbnormalClicked"
        android:text="ABNORMAL"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_portion"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>
